<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Banks</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/bank">Nominal</a></li>
                                    <li class="breadcrumb-item active">Change</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Form Add Banks "
                                            <%= bank.name %>"</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form action="/bank/edit/<%= bank._id%>?_method=PUT" method="POST">
                                        <div class="card-body">

                                            <div class="form-group">
                                                <label for="name">Account Owner Name</label>
                                                <input type="text" name="name" value="<%= bank.name %>" class="form-control" id="name" placeholder="input Owner Names">
                                            </div>

                                            <div class="form-group">
                                                <label for="bankName">Bank Name</label>
                                                <input type="text" name="bankName" value="<%= bank.bankName %>" class="form-control" id="bankName" placeholder="input Bank Names">
                                            </div>

                                            <div class="form-group">
                                                <label for="accountNumber">Account Number</label>
                                                <input type="number" name="accountNumber" value="<%= bank.accountNumber %>" class="form-control" id="accountNumber" placeholder="input Account Number">
                                            </div>

                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </div>
                                    </form>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
                </div>

                <%- include ../../partials/footer.ejs %>
                    <%- include ../../partials/js.ejs %>